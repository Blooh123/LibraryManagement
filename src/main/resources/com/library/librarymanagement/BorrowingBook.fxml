<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="501.0" prefWidth="834.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.librarymanagement.BorrowingBook">

    <!-- Dialog Window for Borrowing Book -->
    <AnchorPane fx:id="borrowDialog" layoutX="36.0" layoutY="36.0" prefHeight="432.0" prefWidth="762.0" style="-fx-background-color: white; -fx-border-color: black;">
        <Label layoutX="10.0" layoutY="10.0" style="-fx-font-size: 18;" text="Borrow Book" />
        <TextField fx:id="bookTitleField" layoutX="13.0" layoutY="66.0" prefWidth="200.0" promptText="Title" />
        <TextField fx:id="bookAuthorField" layoutX="13.0" layoutY="116.0" prefWidth="200.0" promptText="Author" />
        <TextField fx:id="quantityField" layoutX="13.0" layoutY="168.0" prefWidth="100.0" promptText="Enter Quantity" />

        <!-- Button to confirm borrowing -->
        <Button fx:id="confirmBorrowButton" layoutX="18.0" layoutY="380.0" onAction="#handleConfirmBorrow" text="Confirm Borrow" />

        <!-- Button to close the dialog -->
        <Button fx:id="closeDialogButton" layoutX="146.0" layoutY="380.0" onAction="#handleCloseDialog" text="Cancel" />
      <Label layoutX="14.0" layoutY="46.0" text="Book Title" />
      <Label layoutX="14.0" layoutY="97.0" text="Book Author" />
      <Label layoutX="14.0" layoutY="149.0" text="Quantity" />
      <TextField fx:id="dueDateTextField" layoutX="13.0" layoutY="227.0" prefWidth="200.0" promptText="Due Date" />
      <Label layoutX="13.0" layoutY="259.0" text="Note: If the book borrowed not return in time. You will be fine." textFill="RED">
         <font>
            <Font name="System Italic" size="12.0" />
         </font>
      </Label>
    </AnchorPane>
</AnchorPane>
